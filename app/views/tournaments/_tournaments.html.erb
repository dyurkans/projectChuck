<% if @tournaments.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>Start Date</th>
  			<th>End Date</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @tournaments.each do |tournament| %>
        <tr>
          <td><%= link_to tournament.name, tournament_path(tournament) %></td>
  				<td><%= tournament.start_date.strftime("%B %d, %Y") %></td>
          <td><%= tournament.end_date.strftime("%B %d, %Y") %></td>
          <td><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_tournament_path(tournament), :class => 'btn btn-mini' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="digg_pagination">
    <div clas="page_info">
      <%= page_entries_info @tournaments %>
    </div>
    <%= will_paginate @tournaments, :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
  </div>
<% end %>