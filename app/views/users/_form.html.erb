<%= simple_form_for @user do |user_form| %>
  <fieldset>
    <% editingUser = controller.action_name == "edit" || controller.action_name == "update" ? true : false %>
    <legend><%= controller.action_name.capitalize %> User</legend>
      <%= render :partial => "user_fields", :locals => { :f => user_form, :isEdit => editingUser } %>
    <div class="form-actions">
      <%= link_to 'Cancel', users_path, :class => 'btn btn-danger' %>
      <%= user_form.submit nil, :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>