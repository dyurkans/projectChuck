<div class="fields">
  <div class="min_attraction">
  
    <% if isEdit %>
      <label>Guardian: </label><p><%="   " + Guardian.find_by_id(@guardian.id).proper_name unless @guardian.nil? %></p>
    <% else %>
      <%= f.input :guardian_id, :collection => @guardians, :selected => (@guardian.id unless @guardian.nil?), :include_blank => false %>  
    <% end %>
    
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    
    <% if logged_in? && current_user.role == "admin" %>
      <%= f.input :role, :collection => User::ROLES, :include_blank => false, :selected => (@user.role unless @user.nil?) %>
    <% else %>
      <label>Role: </label><p><%="   " + @user.role unless @user.nil? %></p>
    <% end %>
    
    <%= f.input :active %>
  </div>
</div>