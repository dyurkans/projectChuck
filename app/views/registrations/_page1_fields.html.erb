<div class="fields">
  <%= f.simple_fields_for :guardians do |g| %>
    <%= f.simple_fields_for :students do |s| %>
      <%= s.simple_fields_for :registrations do |r| %>
        <%= g.input :household_id, :as => :hidden %>
        <%= s.input :household_id, :as => :hidden %>
        <%= r.input :student_id, :as => :hidden %>
        <div id="page1">
          <%= s.input :first_name, :label => "Student Name", :placeholder => "First Name", :wrapper => :my_wrapper,  :input_html => { size: 30 } %>
          <%= s.input :last_name, :label => false, :placeholder => "Last Name", :wrapper => :my_wrapper, :input_html => { size: 30 } %>
          <%= s.input :gender, :collection => Student::GENDER_LIST, :include_blank => false, :default => 0 %>
          <%= s.input :dob, :label => "Date of Birth", :as => :date, :start_year => Date.today.year-19, :end_year => Date.today.year-4,  :order => [:month, :day, :year], :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' } %>
          <%= s.input :birth_certificate, :as => :file, :label => "Birth Certificate Upload: " %>
          <%= s.input :birth_certificate_cache, :as => :hidden %>
          <%= f.input :street, :label => "Address", :placeholder => "5000 Forbes Avenue", :placeholder => '5000 Forbes Avenue' %>
          <div class="address">
            <%= f.input :city, :label => false, :placeholder => "City", :wrapper => :my_wrapper, :placeholder => 'Pittsburgh', :input_html => { size: 30 } %>
            <%= f.input :state, :label => false, :placeholder => "State", :wrapper => :my_wrapper, :collection => Household::STATES_LIST, :include_blank => false, :selected =>'PA' %>
            <div>
              <%= f.input :zip, :label => false, :placeholder => "Zip Code", :wrapper => :my_wrapper, :placeholder => '15289', :input_html => { size: 20 } %>
            </div>
          </div>
          <div class="address-county">
            <%= f.input :county, :label => "County", :placeholder => "County", :placeholder => 'Allegheny' %>
          </div>
          <%= f.input :home_phone, :label => "Home Phone", :placeholder => "412-333-3333", :placeholder => '412-333-3333', :input_html => { size: 30 } %>
          <%= s.input :cell_phone, :label => "Student Cell Phone", :placeholder => "412-555-5555", :placeholder => '412-555-5555', :input_html => { size: 30 } %>
          <%= s.input :email, :label => "Student Email", :placeholder => "john.carter@email.com", :placeholder => 'john.carter@email.com', :input_html => { size: 30 } %>
          <%= f.label "Please select a security question for the child (to be used for returning years):" %>
          <%= s.input :security_question, :label => false, :collection => Student::SECURITY_QUESTIONS, :include_blank => false %>
          <%= s.input :security_response, :label => "Security Response", :placeholder => "Answer", :placeholder => 'Andolf', :input_html => { size: 30 } %>
          <%= r.input :t_shirt_size, :label => "Jersey Size", :collection => Registration::SIZE_LIST, :include_blank => false %>
          <%= s.input :emergency_contact_name, :label => "Emergency Contact Name", :placeholder => "William Cooper", :input_html => { size: 35 } %>
          <%= s.input :emergency_contact_phone, :label => "Emergency Contact Phone", :placeholder => "412-999-9999", :input_html => { size: 20 } %>
        </div>
        <%= render :partial => "page2_fields", :locals => { :f => f, :s => s, :r => r, :g => g} %>
      <% end %>
    <% end %>
  <% end %>
</div>