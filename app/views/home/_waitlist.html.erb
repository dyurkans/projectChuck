<h4> <%= "#{b.name}" %></h4>
<% students_eligible_for_bracket = b.eligible_students(min,max) %>
<% if b.waitlist > 0 %>
  <%=b.waitlist != 1 ? "There are still #{b.waitlist} spaces available in the #{b.name} bracket." : "There is still #{b.waitlist} space available in the #{b.name} bracket." %></br>
  <%= students_eligible_for_bracket.size != 1 ? "There are currently #{students_eligible_for_bracket.size} eligible students for this bracket." : "There is currently #{students_eligible_for_bracket.size} eligible student for this bracket." %>
  <!-- Isnsert teams that have space available and links to them. -->
<% elsif students_eligible_for_bracket.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Position</th>
        <th>Name</th>
        <th>Age(as of June 1)</th>
        <th>Time Submitted</th>
      </tr>
    </thead>
    <tbody>
      <% position = 1 %>
      <% students_eligible_for_bracket.each do |student| %>
        <tr>
          <td><%= position %></td>
          <td><%= link_to student.name, student_path(student) %></td>
          <td><%= student.age_as_of_june_1 %></td>
          <td><%= student.registrations.current.first.created_at %></td>
        </tr>
        <% position += 1 %>
      <% end %>
    </tbody>
  </table>
  <div clas="page_info">
    <%= page_entries_info students_eligible_for_bracket.paginate(:page => params[:page], :per_page => 10) %>
  </div>
  <%= will_paginate students_eligible_for_bracket.paginate(:page => params[:page], :per_page => 10), :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
<% else %>
  <%= "There are currently no spaces left in this bracket and no unassigned eligible students." %>
<% end %>