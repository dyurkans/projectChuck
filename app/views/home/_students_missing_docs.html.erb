<h3> Registered Students Missing Documents </h3>
<% if @students_missing_docs.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped tournTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Missing Docs</th>
        <th>Cell Phone</th>
      </tr>
    </thead>
    <tbody>
      <% @students_missing_docs.each do |student| %>
        <% missing_docs_list = student.registrations.current[0].missing_doc %>
        <% if !student.registrations.current[0].nil? and missing_docs_list != "" %>
          <tr>
            <td><%= link_to student.name, student_path(student) %></td>
            <% tableCellClass = student.registrations.current[0].missing_doc == "None" ? "" : "myDanger" %>
            <td class=<%= tableCellClass %>><%= missing_docs_list %></td>
            <td><%= number_to_phone student.cell_phone %></td>
          </tr>
        <% else %>
          <% continue %>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>