<div class="row">
	<div class="span12">
		<h2>Bracket Details</h2>
		<%= render :partial => "bracket_details" %>
	</div>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-list'></i> Display All Brackets"), brackets_path, :class => 'btn'  %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-pencil'></i> Edit Bracket"), edit_bracket_path(@bracket), :class => 'btn' %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-remove icon-white'></i> Delete Bracket"), bracket_path(@bracket), :method => 'delete', :action => 'destroy', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>