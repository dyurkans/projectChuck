<% if @brackets.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped tournTable">
    <thead>
      <tr>
        <th>Ages</th>
  			<th>Gender</th>
  			<th>Number of Teams</th>
        <th class="no-sort">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @brackets.each do |bracket| %>
        <tr>
          <td><%= link_to "#{bracket.min_age} - #{bracket.max_age}", bracket_path(bracket) %></td>
  				<td><%= bracket.sex %></td>
          <td><%= bracket.teams.nil? ? "None at this time" : "#{bracket.teams.size}" %></td>
          <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span></i> Edit"), edit_bracket_path(bracket), :class => 'btn btn-md' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>