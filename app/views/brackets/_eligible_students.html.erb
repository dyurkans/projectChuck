<% if @all_eligible_students.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped tournTable">
    <thead>
      <tr>
        <th>Name</th>
  		  <th>Age (as of June 1)</th>
        <th>Missing Document(s)</th>
        <th>Guardian Phone Number</th>
        <th>Team</th> 
      </tr>
    </thead>
    <tbody>
      <% @all_eligible_students.each do |student| %>
        <% if !student.nil? && !student.registrations.current[0].nil? %>
          <tr>
            <% registration = student.registrations.current[0] %>
            <% team = Team.find(registration.team_id) unless registration.team_id.nil? %>
            <td><%= link_to student.name, student_path(student) %></td>
            <td><%= student.dob.nil? ? "---" : student.age_as_of_june_1  %></td>
            <% tableCellClass = registration.missing_doc == "None" ? "" : "myDanger" %>
            <td class=<%= tableCellClass %>><%= registration.missing_doc %></td>
            <% guardian = student.guardians.first %>
            <% if (guardian.nil? || (guardian.cell_phone.empty? && guardian.day_phone.empty?) ) %>
              <td>Not provided</td>
            <% else %>
              <td><%= guardian.cell_phone.empty? ? (number_to_phone guardian.day_phone)+" (day)" : (number_to_phone guardian.cell_phone)+" (cell)" %></td>
            <% end %>
            <td><%= registration.team_id.nil? ? "Not Yet Assigned" : (link_to team_name(team.name), team_path(team)) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>