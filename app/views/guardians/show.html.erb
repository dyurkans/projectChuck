<div class="row">
	<div class="span12">
		<h2>Parent/Guardian Details</h2>
		<%= render :partial => "guardian_details" %>
	</div>
</div>

<div class="form-actions">
  <%= link_to raw("<span class='glyphicon glyphicon-list'></span> Display All Guardians"), guardians_path, :class => 'btn btn-default myDisplayAllButton'  %>&nbsp;&nbsp;
  <%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit Guardian"), edit_guardian_path(@guardian), :class => 'btn btn-primary myEditButton' %>&nbsp;&nbsp;
  <% if @guardian.active %>
  	<%= link_to raw("<span class='glyphicon glyphicon-remove'></span> Make #{@guardian.proper_name} Inactive"), guardian_path(@guardian), :method => 'delete', :confirm => 'Warning: Deactivating this guardian will take them off the text notifications list if they signed up for it.', :class => 'btn btn-danger' %>
  <% else %>
  	<%= link_to raw("<span class='glyphicon glyphicon-ok'></span> Make #{@guardian.proper_name} Active"), activate_guardian_path(@guardian), :class => 'btn btn-success' %>
  <% end %>
</div>