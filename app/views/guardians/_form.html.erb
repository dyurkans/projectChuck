<%= simple_form_for @guardian do |guardian_form| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Parent/Guardian </legend>
    <%= render :partial => "guardian_fields", :locals => { :f => guardian_form } %>
  </fieldset>
  
  <div class="form-actions">
    <%= guardian_form.submit nil, :class => 'btn btn-primary' %>
    <% if current_user.role == 'member' %>
      <%= link_to 'Cancel', home_path, :class => 'btn' %>
    <% else %>
      <%= link_to 'Cancel', guardians_path, :class => 'btn btn-danger' %>
    <% end %>
  </div>
<% end %>