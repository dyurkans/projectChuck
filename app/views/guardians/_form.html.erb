<%= simple_form_for @guardian, :html => { :class => 'form-horizontal' } do |guardian_form| %>
  <div class="row">
    <div class="span7">
      <fieldset>
        <legend><%= controller.action_name.capitalize %> Guardian </legend>
        <%= render :partial => "guardian_fields", :locals => { :f => guardian_form } %>
      </fieldset>
    </div>
  <div>
  
    <div class="form-actions">
    <%= guardian_form.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', guardians_path, :class => 'btn' %>
  </div>
<% end %>