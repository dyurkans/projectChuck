<div class="row">
  <div class="col-sm-6 col-med-6 col-lg-6">
    <h2>Team Details</h2>
    <p>
      <b>Team Name:</b> <%= @team.nil? ? "---" : team_name(@team.name) %>
    </p>

    <p>
      <b>Bracket:</b> <%= @bracket.nil? ? "---" : "#{@bracket.sex} #{@bracket.min_age} - #{@bracket.max_age}" %>
    </p>

    <p>
      <b>Coach:</b><%= @team.coach %>
    </p>

    <p>
      <b>Max Students:</b><%= @team.max_students %>
    </p>

    <p>
      <b>Remaining Spots:</b><%= @team.remaining_spots %>
    </p>
  </div>
  <div class="col-sm-6 col-med-6 col-lg-6">
    <h4 class="teamNotesHeader">Additional Team Notes:</h4>
    <div class="teamNotes">
      <%= @team.notes.blank? ? "None at this time." : @team.notes %>
    </div>
  </div>
</div>


<p>
	<h4>Students</h4>
</p>

<% if @students.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped tournTable">
    <thead>
      <tr>
        <th>Name</th>
  		<th>Age (as of June 1)</th>
        <th>Missing Document(s)</th>
        <th>Phone Number</th>
        <th>Study Halls</th> 
        <th>Current Registration Status</th>
        <th class="no-sort">&nbsp;</th>
        <th class="no-sort">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <% if !student.registrations.current[0].nil? %>
          <tr>
            <% registration = student.registrations.current[0] %>
            <td><%= link_to student.name, student_path(student) %></td>
            <td><%= student.dob.nil? ? "---" : student.age_as_of_june_1  %></td>
            <% tableCellClass = registration.missing_doc == "None" ? "" : "myDanger" %>
            <td class=<%= tableCellClass %>><%= registration.missing_doc %></td>
            <td><%= number_to_phone student.cell_phone %></td>
            <td>1          2          3</td>
            <td><%= registration.active ? "Active" : "Inactive" %></td>
            <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), edit_student_path(student), :class => 'btn btn-md' %></td>
            <td><%= link_to raw("<span class='glyphicon glyphicon-remove'></span> Remove from #{@team.team_name}"), remove_student_path(student_id: student.id), :origin => 'teams', :class => "btn btn-md" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>

&nbsp;&nbsp;&nbsp;&nbsp;
<h4>Eligible Unassigned Students</h4>
<% if @eligible_students.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped tournTable">
    <thead>
      <tr>
        <th>Name</th>
      <th>Age</th>
        <th>Missing Document(s)</th>
        <th>Phone Number</th>
        <th>Current Registration Status</th>
        <th>&nbsp;</th>
        <% if @team.remaining_spots >  0 %>
        <th>&nbsp;</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @eligible_students.each do |student| %>
        <% if !student.registrations.current[0].nil? %>          
          <tr>
            <% registration = student.registrations.current[0] %> 
            <td><%= link_to student.name, student_path(student) %></td>
            <td><%= student.dob.nil? ? "---" : student.age  %></td>
            <% tableCellClass = registration.missing_doc == "None" ? "" : "myDanger" %>
            <td class=<%= tableCellClass %>><%= registration.missing_doc %></td>
            <td><%= number_to_phone student.cell_phone %></td>
            <td><%= registration.active ? "Active" : "Inactive" %></td>
            <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), edit_student_path(student), :class => 'btn btn-md' %></td>
            <% if @team.remaining_spots >  0 %>
              <td><%= link_to raw("<span class='glyphicon glyphicon-plus'></span> Add to #{team_name(@team.name)} "), add_student_path(student_id: student.id), :origin => 'teams', :class => "btn btn-md" %></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
	

