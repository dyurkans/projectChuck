<%= simple_form_for @team do |team_form| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Team </legend>
    <%= render :partial => "team_fields", :locals => { :f => team_form } %>
  </fieldset>
  
  <div class="form-actions">
    <%= link_to 'Cancel', teams_path, :class => 'btn btn-danger' %>
    <%= team_form.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>