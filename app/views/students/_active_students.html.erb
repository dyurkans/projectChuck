<% if @all_students.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped tournTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age (as of June 1)</th>
        <th>Gender</th>
        <th>Team</th>
        <th>Bracket</th>
        <th>Missing Document(s)</th>
        <th>Current Status</th>
        <th class="no-sort">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @all_students.each do |stu| %>
        <tr>
          <% student = Student.find(stu.id) %>
          <% registration = student.registrations.current[0] unless student.registrations.current[0].nil? %>
          <% team = Team.find_by_id(registration.team_id) unless registration.nil? %>
          <% bracket = Bracket.find_by_id(team.bracket_id) unless team.nil? %>
          <td><%= link_to student.name, student_path(student) %></td>
          <td><%= student.dob.nil? ? "---" : student.age_as_of_june_1  %></td>
          <td><%= student.sex %></td>
          <td><%= team.nil? ? "---" : (link_to team_name(team.name), team_path(team))  %></td>
          <td><%= bracket.nil? ? "---" : (link_to "#{bracket.min_age} - #{bracket.max_age}", bracket_path(bracket)) %></td>
          <% tableCellClass = if registration.nil? then "" else registration.missing_doc == "None" ? "" : "myDanger" end %>
          <td class=<%= tableCellClass %>><%= registration.nil? ? "----" : registration.missing_doc %></td>
          <td><%= if stu.nil? then "Inactive" else stu.active ? "Active" : "Inactive" end %></td>
          <td><%= link_to raw("<span class='glyphicon glyphicon-pencil'></span> Edit"), edit_student_path(student), :class => 'btn btn-md' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>