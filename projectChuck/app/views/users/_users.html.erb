<% if @users.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>Email</th>
        <th>Role</th>
        <th>User Status</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% if current_user != user %>
          <tr>
            <td><%= link_to Guardian.find(user.guardian_id).name, user_path(user) %></td>
    				<td><%= user.email %></td>
            <td><%= user.role=="member" ? "Member":"Admin" %></td>
            <td><%= user.active ? "Active" : "Inactive" %></td>
            <td><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_user_path(user), :class => 'btn btn-mini' %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="digg_pagination">
    <div clas="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
  </div>
<% end %>