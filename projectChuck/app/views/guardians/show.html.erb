<div class="row">
	<div class="span12">
		<h2>Guardian Details</h2>
		<%= render :partial => "guardian_details" %>
	</div>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-list'></i> Display All Guardians"), guardians_path, :class => 'btn'  %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-pencil'></i> Edit Guardian"), edit_guardian_path(@guardian), :class => 'btn' %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-remove icon-white'></i> Delete Guardian"), guardian_path(@guardian), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>