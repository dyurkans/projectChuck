<div class="fields">
  <div class="min_attraction">
      <%= f.input :household_id, :collection => Household.by_last_name.map { |h| "#{h.name}" }, :required => true, :selected => (@household unless @household.nil?), :allow_blank => false  %>
      <%= f.input :first_name, :required => true %>
      <%= f.input :last_name, :required => true %>
      <%= f.input :gender, :collection => Student::GENDER_LIST, :required => true, :allow_blank => false %>
      <%= f.input :dob, :label => "Date of Birth", :as => :date, :start_year => Date.today.year - 18, :end_year => Date.today.year - 90,  :order => [:month, :day, :year], :include_blank => false, :required => true %>
      <%= f.input :cell_phone, :required => true %>
      <%= f.input :day_phone, :required => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :receive_texts, :required => true %>
      <%= f.input :active, :required => true %>
  </div>
</div>