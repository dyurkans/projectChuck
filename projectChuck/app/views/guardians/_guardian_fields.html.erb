<div class="fields">
  <div class="min_attraction">
  	  <%= f.input :household_id, :collection => @households, :include_blank => false, :label=> "Household Name" %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :gender, :collection => Student::GENDER_LIST, :include_blank => false %>
      <%= f.input :dob, :label => "Date of Birth", :as => :date, :start_year => Date.today.year - 18, :end_year => Date.today.year - 90,  :order => [:month, :day, :year], :include_blank => false %>
      <%= f.input :cell_phone %>
      <%= f.input :day_phone %>
      <%= f.input :email %>
      <%= f.input :receive_texts, :label => "Receive Text Notifications" %>
      <%= f.input :active %>
  </div>
</div>