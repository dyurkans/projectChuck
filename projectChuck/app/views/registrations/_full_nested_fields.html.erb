<div class="fields">
  <div id="page1">
    <%= f.input "student[first_name]", :label => "Student Name", :placeholder => "First", :wrapper => :my_wrapper, :input_html => { size: 30 } %>
    <%= f.input "student[last_name]", :label => false, :placeholder => "Last", :wrapper => :my_wrapper, :input_html => { size: 30 } %>
    <%= f.input "student[gender]", :collection => Student::GENDER_LIST, :default => 0 %>
    <%= f.input "student[dob]", :label => "Date of Birth", :as => :date, :start_year => Date.today.year-19, :end_year => Date.today.year-4,  :order => [:month, :day, :year], :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' } %>
    <%= f.input :birth_certificate, :as => :file, :label => "Birth Certificate Upload: " %>
    <%= f.input :street, :label => "Address", :placeholder => "5000 Forbes Avenue" %>
    <div class="address">
      <%= f.input :city, :label => false, :placeholder => "City", :wrapper => :my_wrapper, :input_html => { size: 30 } %>
      <%= f.input :state, :label => false, :placeholder => "State", :wrapper => :my_wrapper, :collection => Household::STATES_LIST, :selected =>'PA' %>
      <div>
        <%= f.input :zip, :label => false, :placeholder => "Zip Code", :wrapper => :my_wrapper, :input_html => { size: 20 } %>
        <%= f.input :county, :label => false, :placeholder => "County", :wrapper => :my_wrapper, :input_html => { size: 20 } %>
      </div>
    </div>
    <%= f.input "student[cell_phone]", :label => "Student Cell Phone", :placeholder => "412-555-5555", :input_html => { size: 30 } %>
    <%= f.input "student[email]", :label => "Student Email", :placeholder => "john.carter@email.com", :input_html => { size: 30 } %>
    <%= f.label "Please select a security question for the child (to be used for returning years):" %>
    <%= f.input :security_question, :label => false, :collection => Student::SECURITY_QUESTIONS %>
    <%= f.input :security_response, :label => "Security Response", :placeholder => "Answer", :input_html => { size: 30 } %>
    <%= f.input :t_shirt_size, :label => "Jersey Size", :collection => Registration::SIZE_LIST %>
    <%= f.input :emergency_contact_name, :label => "Emergency Contact Name", :placeholder => "William Cooper", :input_html => { size: 35 } %>
    <%= f.input :emergency_contact_phone, :label => "Emergency Contact Phone", :placeholder => "412-999-9999", :input_html => { size: 20 } %>
  </div>
  <div id="page2" class="myHide">
    <%= f.input "guardian[first_name]", :label => "Guardian Name", :placeholder => "First", :wrapper => :my_wrapper, :input_html => { size: 30 } %>
    <%= f.input "guardian[last_name]", :label => false, :placeholder => "Last", :wrapper => :my_wrapper, :input_html => { size: 30 } %>
    <%= f.input "guardian[gender]", :label => "Guardian Gender", :collection => Student::GENDER_LIST, :default => 0 %>
    <%= f.input "guardian[dob]", :label => "Date of Birth", :as => :date, :start_year => Date.today.year-19, :end_year => Date.today.year-4,  :order => [:month, :day, :year], :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }, :required => false %>
    <%= f.input "guardian[email]", :placeholder => "johndoe@gmail.com", :input_html => { size: 30 } %>
    <%= f.input :day_phone, :label => "Day Phone", :placeholder => "412-345-5555", :input_html => { size: 30 } %>
    <%= f.input :cell_phone, :label => "Guardian Cell Phone", :placeholder => "412-567-9999", :input_html => { size: 30 } %>
    <%= f.input :receive_texts, :label => "Opt-in to Receive Text Messages" %>
  </div>
  <div id="page3" class="myHide">
    <%= f.input :school, :label => "School Name", :placeholder => "Barrett Elementary School" %>
    <%= f.input :grade_integer, :label => "Grade (as of Semptember, #{Date.today.year}", :collection => Student::GRADES_LIST %>
    <%= f.input :report_card, :as => :file, :label => "Report Card Upload: " %>
  </div>
  <div id="page4" class="myHide">
    <%= f.input :insurance_provider, :label => "Insurance Provider: ", :placeholder => "Blue Cross, Blue Shield" %>
    <%= f.input :insurance_policy_no, :label => "Insurance Policy Number: ", :placeholder => "0992X R78123 678" %>
    <%= f.input :proof_of_insurance, :as => :file, :label => "Proof of Insurance Upload: " %>
  </div>
  <div id="page5" class="myHide">
    <%= f.input :family_physician, :label => "Physician Name", :placeholder => "Dr. Herbert Fiscal" %>
    <%= f.input :physician_phone, :label => "Physician Phone", :placeholder => "412-778-9999" %>
    <%= f.input :physical_date, :label => "Date of Last Physical Exam: ", :as => :date, :start_year => Date.today.year-18, :end_year => Date.today.year-5,  :order => [:month, :day, :year], :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' } %>    
    <%= f.input :allergies, :input_html => { :rows => 3 , :cols => 30} %>
    <%= f.input :medications, :input_html => { :rows => 3 , :cols => 30} %>
    <%= f.input :physical, :as => :file, :label => "Physical Form Upload: " %>
  </div>
  <%= f.input "student[household_id]", :as => :hidden %>
  <%= f.input "guardian[household_id]", :as => :hidden %>
</div>