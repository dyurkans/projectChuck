<div class="fields">
  <div class="min_attraction">
    <%= f.input :bracket_id, :collection => Bracket.all, :include_blank => false, :selected => (@bracket.id unless @bracket.nil?) %>
	<%= f.input :name, :collection => @teams, :include_blank => false, :selected => @team.name %>
    <%= f.input :coach, :placeholder => "Full Name" %>
    <% current_registered = @team.current_number_of_students %>
    <% min_selection = 5 %>
    <% if current_registered > 5 then min_selection = current_registered end %>
    <%= f.input :max_students, collection: (min_selection..@team.max_students), :include_blank => false, :selected => @team.max_students %>
  </div>
</div>