<div class="fields">
  <div class="min_attraction">
      <%= r.hidden_field :student_id %>
      <%= r.hidden_field :team_id %>
      <%= r.input :report_card, :as => :file, :label => "Report Card" %>
      <%= r.hidden_field :report_card_cache %>
      <%= r.input :proof_of_insurance, :as => :file, :label => "Insurance Card" %>
      <%= r.input :physical, :as => :file, :label => "Last Physical" %>
      <%= r.input :physical_date, :label => "Date of Last Physical", :as => :date, :start_year => Date.today.year, :end_year => Date.today.year - 1,  :order => [:month, :day, :year], :include_blank => true %>
      <%= r.input :t_shirt_size, :collection => Registration::SIZE_LIST %>
      <%= r.input :active, :label => "Active Registration?" %>
  </div>
</div>