<!DOCTYPE html>
<html>
  <head>
    <title>Project C.H.U.C.K.</title>
    <%= stylesheet_link_tag    "reset" %>
    <%= stylesheet_link_tag    "bootstrap" %>
    <%= stylesheet_link_tag    "my_style" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= javascript_include_tag "application" %>    
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <!-- MAIN CONTENT -->
      <div class="row">
        <div class="col-sm-5 col-med-4 col-lg-3 sidebar">
          <!-- TITLE BAR -->
          <%= link_to(image_tag('projectChuckLogo.jpg'), home_path) %>
        </div>
        <div class="col-sm-7 col-med-8 col-lg-9 main">
          <!-- NAV BAR -->
          <!-- flash messages -->
          <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
              <a class="close" data-dismiss="alert">&times;</a>
              <%= msg %>
            </div>
          <% end %>
          <div class="row">
            <!-- main content placed here -->
            <div class="col-sm-7 col-md-10 col-lg-9">
              <div id="main_content">
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <!-- FOOTER -->
  <footer>
    <div class="container">
      <% render :partial => "partials/footer" %>
    </div>
  </footer>

</body>
</html>
